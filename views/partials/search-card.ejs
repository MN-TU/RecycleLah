<!--This partial dynamically renders the information that is defined in the cards on explore.js.-->

<div class="row mb-4 <%= cardClasses %>">
    <div class="col-12">
      <a href="<%= cardLink %>" class="search-card-link">
        <div class="card h-100">
          <div class="card-body d-flex search-card-flex">
            <div class="col-md-4 d-flex align-items-stretch">
              <img src="<%= cardImage %>" class="img-fluid search-card-img" alt="<%= cardAltText %>">
            </div>
            <div class="col-12 col-md-8 content-box">
              <p class="search-header-subtext"><%= cardHeaderSubtext %></p>
              <h1 class="search-card-title"><%= cardTitle %></h1>
              <div class="d-flex flex-wrap align-items-center">
                <% cardPills.forEach(function(pill) { %>
                  <span class="search-subtext pill"><%= pill %></span>
                <% }) %>
              </div>
              <div class="d-flex align-items-center">
                <p>Distance:</p>
                <p class="highlight-text"><%= cardDistance %></p>
              </div>
              <div class="d-flex align-items-center">
                <p>Sightings:</p>
                <% cardSightings.forEach(function(details) { %>
                  <div class="mytooltip">
                    <i class="fas <%= details.icon %> search-icon"></i> <div class="mytooltiptext"><%= details.tooltiptext %> </div>
                  </div>
                  
                <% }) %>
              </div>
              <p><%= cardDescription %></p>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
  